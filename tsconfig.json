{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}